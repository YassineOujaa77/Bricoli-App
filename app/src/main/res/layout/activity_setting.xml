<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="26dp"
    android:layout_marginRight="26dp"
    android:gravity="center"
    tools:context=".activities.SettingActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">
        <ImageView
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:src="@drawable/photo">
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:text="@string/account"
            android:textColor="@color/black"
            android:textSize="26dp"
            android:fontFamily="@font/poppins_regular"
            android:textStyle="bold">
        </TextView>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="24dp">

        <TextView
            android:id="@+id/edit_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:fontFamily="@font/poppins_regular"
            android:text="@string/edit_profile"
            android:textColor="@color/black"
            android:textSize="20dp">

        </TextView>

        <ImageView
            android:id="@+id/edit_profile_icon"
            android:layout_width="15dp"
            android:layout_height="18dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="9.5dp"
            android:src="@drawable/superior"></ImageView>

        <TextView
            android:id="@+id/change_passwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit_profile"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/poppins_regular"
            android:text="@string/change_password"
            android:textColor="@color/black"
            android:textSize="20dp">

        </TextView>

        <ImageView
            android:id="@+id/change_passwd_icon"
            android:layout_width="15dp"
            android:layout_height="18dp"
            android:layout_below="@id/edit_profile"
            android:layout_alignParentRight="true"
            android:layout_marginTop="9.5dp"
            android:src="@drawable/superior"></ImageView>

        <TextView
            android:id="@+id/change_role"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/change_passwd"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/poppins_regular"
            android:text="@string/change_role"
            android:textColor="@color/black"
            android:textSize="20dp">

        </TextView>

        <ImageView
            android:id="@+id/change_role_icon"
            android:layout_width="15dp"
            android:layout_height="18dp"
            android:layout_below="@id/change_passwd"
            android:layout_alignParentRight="true"
            android:layout_marginTop="9.5dp"
            android:src="@drawable/superior"></ImageView>

        <TextView
            android:id="@+id/add_recent_job"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/change_role"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/poppins_regular"
            android:text="@string/add_recent_job"
            android:textColor="@color/black"
            android:textSize="20dp">

        </TextView>

        <ImageView
            android:id="@+id/add_recent_job_icon"
            android:layout_width="15dp"
            android:layout_height="18dp"
            android:layout_below="@id/change_role"
            android:layout_alignParentRight="true"
            android:layout_marginTop="9.5dp"
            android:src="@drawable/superior"></ImageView>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <ImageView
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:src="@drawable/more">

        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:text="@string/more"
            android:textColor="@color/black"
            android:textSize="26dp"
            android:fontFamily="@font/poppins_regular"
            android:textStyle="bold">

        </TextView>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="24dp">
    <TextView
        android:id="@+id/language"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="@string/language"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:fontFamily="@font/poppins_regular">

    </TextView>
    <ImageView
        android:id="@+id/language_icon"
        android:layout_width="15dp"
        android:layout_height="18dp"
        android:layout_marginTop="9.5dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/superior">
    </ImageView>
        <TextView
            android:id="@+id/share_with_friends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/share_with_friends"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:fontFamily="@font/poppins_regular"
            android:layout_below="@id/language">

        </TextView>
        <ImageView
            android:id="@+id/share_with_friends_icon"
            android:layout_width="15dp"
            android:layout_height="18dp"
            android:layout_marginTop="9.5dp"
            android:src="@drawable/superior"
            android:layout_below="@id/language"
            android:layout_alignParentRight="true">
        </ImageView>
    </RelativeLayout>
    <Button
        android:id="@+id/log_out"
        android:layout_width="120dp"
        android:layout_height="42dp"
        android:layout_marginTop="28dp"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:backgroundTint="@color/burgundy"
        android:background="@drawable/apply_button_shape"
        android:text="@string/log_out">
    </Button>

</LinearLayout>