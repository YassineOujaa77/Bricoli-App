<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/bricoliTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/inter_bold"
            android:shadowColor="@color/ash_gray"
            android:shadowDx="-5"
            android:shadowDy="15"
            android:shadowRadius="25"
            android:text="@string/bricoli"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="50dp" />

        <TextView
            android:id="@+id/chooseServiceTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="80dp"
            android:fontFamily="@font/inter_bold"
            android:shadowColor="@color/ash_gray"
            android:shadowDx="10"
            android:shadowDy="13"
            android:shadowRadius="20"
            android:text="@string/choose_service_text"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="25dp" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
            android:id="@+id/textInputLayout"
            android:layout_width="wrap_content"
            android:layout_height="83dp"
            android:layout_gravity="center"
            android:layout_marginTop="56dp"
            android:background="@drawable/filter_spinner_dropdown_bg"
            android:elevation="10dp"
            app:boxBackgroundColor="@color/white"
            app:boxCornerRadiusBottomEnd="16dp"
            app:boxCornerRadiusBottomStart="16dp"
            app:boxCornerRadiusTopEnd="16dp"
            app:boxCornerRadiusTopStart="16dp"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp"
            app:endIconTint="@color/purple_700">

            <AutoCompleteTextView
                android:id="@+id/autoCompleteTxt"
                android:layout_width="296dp"
                android:layout_height="83dp"
                android:background="@null"
                android:dropDownSelector="@drawable/filter_spinner_dropdown_bg"
                android:ellipsize="end"
                android:fontFamily="@font/inter_bold"
                android:text="@string/choose_service_spinner"
                android:inputType="none"
                android:maxLines="1"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:singleLine="true"
                android:textAlignment="textStart"
                android:textColor="@color/gray_hintText"
                android:textSize="18dp"
                tools:ignore="LabelFor" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="296dp"
            android:layout_height="155dp"
            android:layout_gravity="center"
            android:layout_marginTop="65dp"
            android:background="@drawable/rounded_corner_button"
            android:elevation="10dp"
            android:fontFamily="@font/inter_bold"
            android:gravity="top"
            android:hint="@string/add_description"
            android:inputType="textMultiLine"
            android:lines="6"
            android:overScrollMode="always"
            android:paddingLeft="25dp"
            android:paddingTop="25dp"
            android:scrollbarStyle="insideInset"
            android:scrollbars="vertical"
            android:scrollHorizontally="false"
            android:textColorHint="@color/gray_hintText"
            android:textSize="18dp" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/findButton"
            android:layout_width="296dp"
            android:layout_height="73dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:background="@drawable/rounded_corner_button"
            android:backgroundTint="@color/yellow"
            android:elevation="10dp"
            android:fontFamily="@font/inter_bold"
            android:stateListAnimator="@null"
            android:text="@string/find"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="18dp" />


    </LinearLayout>
</layout>